<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BukuRingkasApp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkas materi pelajaran menjadi poin-poin yang mudah dipahami"
                android:textSize="16sp"
                android:textColor="@color/on_surface_variant"
                android:gravity="center"
                android:lineHeight="24sp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

        <!-- Latest Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/latestSummaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“š Ringkasan Terakhir"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/summarySubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mata Pelajaran â€¢ Kelas X"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

                <TextView
                    android:id="@+id/summaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Ringkasan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/summaryContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konten ringkasan akan muncul di sini..."
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:lineHeight="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai Ringkas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginBottom="16dp" />

        <!-- Camera Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cameraButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/surface"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“±"
                    android:textSize="32sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mulai Foto"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ambil foto buku pelajaran"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Text Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/textButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/surface"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸"
                    android:textSize="32sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Input Teks"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ketikan atau paste teks materi"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- History Button -->
        <Button
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Lihat Riwayat Ringkasan"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
