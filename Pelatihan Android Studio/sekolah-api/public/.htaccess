<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Block direct access to API from browsers
    # Allow only proper API clients (mobile apps, Postman, etc.)
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteCond %{HTTP_ACCEPT} text/html
    RewriteCond %{HTTP_USER_AGENT} !okhttp [NC]
    RewriteCond %{HTTP_USER_AGENT} !Retrofit [NC]
    RewriteCond %{HTTP_USER_AGENT} !Postman [NC]
    RewriteCond %{HTTP_USER_AGENT} !curl [NC]
    RewriteCond %{HTTP_USER_AGENT} !insomnia [NC]
    RewriteCond %{HTTP_X_REQUESTED_WITH} !XMLHttpRequest [NC]
    RewriteRule ^api/(.*)$ / [R=302,L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
