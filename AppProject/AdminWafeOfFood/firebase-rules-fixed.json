{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "test_connection": {
      ".read": true,
      ".write": true
    },

    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "user_orders": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$orderId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "orders": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$orderId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "menus": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$menuId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "admin_users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
