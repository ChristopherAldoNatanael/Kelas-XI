<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_green"
                android:centerColor="@color/accent_mint"
                android:endColor="@color/background_light"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Wave Pattern Overlay -->
    <item android:top="100dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size 
                android:width="400dp"
                android:height="800dp" />
        </shape>
    </item>
    
    <!-- Secondary Wave -->
    <item android:top="150dp" android:left="-100dp">
        <shape android:shape="oval">
            <solid android:color="@color/accent_mint" />
            <size 
                android:width="300dp"
                android:height="600dp" />
        </shape>
    </item>
</layer-list>
