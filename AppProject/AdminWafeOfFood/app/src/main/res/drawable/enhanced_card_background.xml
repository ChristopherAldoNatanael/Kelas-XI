<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="@dimen/radius_xl" />
        </shape>
    </item>
    
    <!-- Card Background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/radius_xl" />
            <stroke 
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
    
</layer-list>
