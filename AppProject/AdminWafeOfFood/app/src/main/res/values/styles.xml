<?xml version="1.0" encoding="utf-8"?>
<resources>    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextStyle.Heading1">
        <item name="android:textSize">@dimen/text_3xl</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextStyle.Heading2">
        <item name="android:textSize">@dimen/text_2xl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextStyle.Heading3">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextStyle.Body">
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <style name="TextStyle.Caption">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
    
    <style name="TextStyle.Button">
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Button Styles -->    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="cornerRadius">@dimen/radius_full</item>
        <item name="android:paddingLeft">@dimen/spacing_lg</item>
        <item name="android:paddingRight">@dimen/spacing_lg</item>
    </style>
    
    <style name="ButtonStyle.Primary">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="ButtonStyle.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>        <item name="cornerRadius">@dimen/radius_full</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:paddingLeft">@dimen/spacing_lg</item>
        <item name="android:paddingRight">@dimen/spacing_lg</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_md</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_md</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_md</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_md</item>
        <item name="boxStrokeColor">@color/border_light</item>
        <item name="hintTextColor">@color/placeholder</item>
    </style>
      <style name="InputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/background_light</item>
        <item name="android:layout_margin">@dimen/spacing_sm</item>
    </style>
    
    <style name="CardStyle.Dashboard">
        <item name="android:padding">@dimen/padding_card</item>
        <item name="cardCornerRadius">@dimen/radius_md</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">@dimen/bottom_nav_height</item>
        <item name="android:background">@color/background_light</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="elevation">8dp</item>
        <item name="itemTextAppearanceActive">@style/TextStyle.Caption</item>
        <item name="itemTextAppearanceInactive">@style/TextStyle.Caption</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/background_light</item>
        <item name="titleTextAppearance">@style/TextStyle.Heading3</item>
        <item name="android:elevation">4dp</item>
    </style>
      <!-- Status Badge Styles -->    <style name="StatusBadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_md</item>
        <item name="android:paddingRight">@dimen/spacing_md</item>
        <item name="android:paddingTop">@dimen/spacing_xs</item>
        <item name="android:paddingBottom">@dimen/spacing_xs</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/status_badge_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
      <!-- Chip Styles -->
    <style name="ChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@dimen/radius_full</item>
        <item name="chipBackgroundColor">@color/surface_light</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ChipStyle.Selected">
        <item name="chipBackgroundColor">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
</resources>
