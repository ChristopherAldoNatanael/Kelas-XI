<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_category_item_normal"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Category Icon -->
    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_category_icon"
        android:padding="6dp"
        android:src="@drawable/ic_category_food"
        app:tint="@android:color/white" />

    <!-- Category Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Makanan Utama"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/categoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nasi, mie, dan menu utama lainnya"
            android:textColor="@color/textColorSecondary"
            android:textSize="13sp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Selected Indicator -->
    <ImageView
        android:id="@+id/selectedIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        app:tint="@color/colorPrimary"
        tools:visibility="visible" />

</LinearLayout>
