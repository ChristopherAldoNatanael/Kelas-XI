<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Main Category Selector Button -->
    <LinearLayout
        android:id="@+id/categorySelector"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/selector_category_normal"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- Category Icon -->
        <ImageView
            android:id="@+id/selectedCategoryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_category_placeholder"
            app:tint="@color/colorPrimary" />

        <!-- Category Text -->
        <TextView
            android:id="@+id/selectedCategoryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Category"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium" />

        <!-- Dropdown Arrow -->
        <ImageView
            android:id="@+id/dropdownArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/textColorSecondary" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone" />

    <!-- Dropdown Container -->
    <FrameLayout
        android:id="@+id/dropdownContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Overlay for clicking outside -->
        <View
            android:id="@+id/dropdownOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <!-- Dropdown Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dropdownCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” SEARCH CATEGORY"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <!-- Search Input Container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorPrimary"
                    android:backgroundTint="@color/surfaceVariant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_search"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Cari category..."
                            android:textColorHint="@color/textColorSecondary"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/clearSearchButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clear"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="2dp"
                            android:visibility="gone"
                            app:tint="@color/textColorSecondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Category List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="240dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_category_dropdown" />

                <!-- No Results State -->
                <LinearLayout
                    android:id="@+id/noResultsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_search_off"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/textColorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak ada category ditemukan"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>
