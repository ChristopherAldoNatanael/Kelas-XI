<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Upload Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- URL Upload Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadFromUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From URL"
            android:icon="@drawable/ic_link"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Gallery Upload Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadFromGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From Gallery"
            android:icon="@drawable/ic_image"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    <!-- URL Input Section -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Image URL"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Upload Progress -->
    <LinearLayout
        android:id="@+id/layoutUploadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvUploadStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploading..."
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false" />

    </LinearLayout>

    <!-- Image Preview -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImagePreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivImagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Image Preview" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>