<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="@dimen/spacing_xl"
            android:gravity="center_horizontal">

            <!-- Profile Avatar -->
            <FrameLayout
                android:layout_width="@dimen/avatar_lg"
                android:layout_height="@dimen/avatar_lg"
                android:layout_marginBottom="@dimen/spacing_md">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_gradient_background"
                    android:padding="@dimen/spacing_md"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:contentDescription="Profile Picture" />

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:layout_gravity="bottom|end"
                    android:background="@color/primary_green"
                    android:src="@drawable/ic_edit"
                    android:padding="@dimen/spacing_xs"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Profile Picture" />

            </FrameLayout>            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Owner"
                style="@style/TextStyle.Heading3"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                style="@style/TextStyle.Body"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warung Nasi Padang Sederhana"
                style="@style/TextStyle.Caption" />

        </LinearLayout>

        <!-- Settings Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_horizontal">

            <!-- Restaurant Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                style="@style/CardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurant_info"
                        style="@style/TextStyle.Heading3"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Menu Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_md"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_restaurant"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/restaurant_name"
                            style="@style/TextStyle.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_sm"
                            android:layout_height="@dimen/icon_sm"
                            android:src="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_md"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_location"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/restaurant_address"
                            style="@style/TextStyle.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_sm"
                            android:layout_height="@dimen/icon_sm"
                            android:src="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_md"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_schedule"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/operating_hours"
                            style="@style/TextStyle.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_sm"
                            android:layout_height="@dimen/icon_sm"
                            android:src="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Account Settings -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                style="@style/CardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_settings"
                        style="@style/TextStyle.Heading3"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_md"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_email"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/change_email"
                            style="@style/TextStyle.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_sm"
                            android:layout_height="@dimen/icon_sm"
                            android:src="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_md"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_lock"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/change_password"
                            style="@style/TextStyle.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_sm"
                            android:layout_height="@dimen/icon_sm"
                            android:src="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:backgroundTint="@color/error"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="@dimen/spacing_sm"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_xl"
                style="@style/ButtonStyle.Primary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
