<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Main Image Display -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimary"
        android:backgroundTint="@color/surfaceVariant">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Selected Image -->
            <ImageView
                android:id="@+id/selectedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@android:drawable/ic_menu_gallery" />

            <!-- Placeholder with Animation -->
            <LinearLayout
                android:id="@+id/placeholderContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Animated Icon Container -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/colorPrimary">

                        <ImageView
                            android:id="@+id/placeholderIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_photo_alt"
                            app:tint="@android:color/white" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· ADD MENU IMAGE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose from gallery or enter URL"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:icon="@drawable/ic_photo_library" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnterUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_link" />

                </LinearLayout>

            </LinearLayout>

            <!-- Loading Overlay -->
            <FrameLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/surface_overlay"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminateTint="@color/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/loadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading image..."
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium" />

                </LinearLayout>

            </FrameLayout>

            <!-- Image Actions Overlay (shown when image is selected) -->
            <LinearLayout
                android:id="@+id/imageActionsOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_overlay_gradient"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Change"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:icon="@drawable/ic_edit" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRemoveImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/error" />

            </LinearLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- URL Input Section -->
    <LinearLayout
        android:id="@+id/urlInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- URL Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            android:backgroundTint="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— IMAGE URL"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- URL Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="https://example.com/image.jpg"
                    app:helperText="Paste image URL or use clipboard"
                    app:endIconMode="clear_text"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/urlEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- URL Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPasteUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Paste"
                        style="@style/Widget.Material3.Button.TextButton"
                        app:icon="@drawable/ic_content_paste" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoadUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Load"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:icon="@drawable/ic_download" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Gallery Grid Section -->
    <LinearLayout
        android:id="@+id/gallerySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Gallery Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ–¼ï¸ RECENT IMAGES"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrowseMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                style="@style/Widget.Material3.Button.TextButton"
                app:icon="@drawable/ic_folder_open" />

        </LinearLayout>

        <!-- Gallery Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/galleryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:itemCount="6"
            tools:listitem="@layout/item_gallery_image"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:spanCount="3" />

    </LinearLayout>

    <!-- Error Message -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/errorCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/error"
        android:backgroundTint="@color/error_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_error"
                app:tint="@color/error" />

            <TextView
                android:id="@+id/errorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Failed to load image"
                android:textColor="@color/error"
                android:textSize="13sp"
                android:fontFamily="@font/inter_medium" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
