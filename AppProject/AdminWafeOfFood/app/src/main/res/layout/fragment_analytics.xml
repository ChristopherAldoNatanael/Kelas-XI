<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:paddingTop="@dimen/spacing_lg">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analytics_reports"
            style="@style/TextStyle.Heading2"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Date Filter -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            style="@style/CardStyle.Dashboard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_by_date"
                    style="@style/TextStyle.Heading3"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            style="@style/ChipStyle.Selected" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_last_7_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_7_days"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            style="@style/ChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_this_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/this_month"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            style="@style/ChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_range"
                            style="@style/ChipStyle" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Key Metrics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_lg">

            <!-- Total Sales -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                style="@style/CardStyle.Dashboard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/icon_lg"
                        android:layout_height="@dimen/icon_lg"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:background="@drawable/icon_background_green"
                        android:padding="@dimen/spacing_sm"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_sales"
                        style="@style/TextStyle.Caption"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 15,250,000"
                        style="@style/TextStyle.Heading3"
                        android:textColor="@color/primary_green"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Order Count -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                style="@style/CardStyle.Dashboard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/icon_lg"
                        android:layout_height="@dimen/icon_lg"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:background="@drawable/icon_background_blue"
                        android:padding="@dimen/spacing_sm"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_count"
                        style="@style/TextStyle.Caption"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="247"
                        style="@style/TextStyle.Heading3"
                        android:textColor="@color/info"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Sales Chart -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            style="@style/CardStyle.Dashboard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sales Trend"
                        style="@style/TextStyle.Heading3"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_more_vert"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/spacing_xs" />

                </LinearLayout>

                <!-- Chart Placeholder -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/surface_light"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interactive chart will be implemented here"
                    style="@style/TextStyle.Caption"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Popular Items -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            style="@style/CardStyle.Dashboard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/most_popular_items"
                    style="@style/TextStyle.Heading3"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Popular Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:text="1"
                        android:background="@drawable/icon_background_green"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/spacing_md" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nasi Goreng Spesial"
                            style="@style/TextStyle.Body"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 orders"
                            style="@style/TextStyle.Caption"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 1,125,000"
                        style="@style/TextStyle.Body"
                        android:textColor="@color/primary_green"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Popular Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:text="2"
                        android:background="@drawable/icon_background_blue"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/spacing_md" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Es Teh Manis"
                            style="@style/TextStyle.Body"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="38 orders"
                            style="@style/TextStyle.Caption"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 190,000"
                        style="@style/TextStyle.Body"
                        android:textColor="@color/primary_green"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Export Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_xl">

            <Button
                android:id="@+id/btn_export_csv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="@string/export_csv"
                android:drawableStart="@drawable/ic_download"
                android:drawablePadding="@dimen/spacing_sm"
                style="@style/ButtonStyle.Secondary" />

            <Button
                android:id="@+id/btn_export_pdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/export_pdf"
                android:drawableStart="@drawable/ic_download"
                android:drawablePadding="@dimen/spacing_sm"
                style="@style/ButtonStyle.Primary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
