<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">    <!-- Internet permission untuk Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Vibration permission untuk haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdminWafeOfFood"
        tools:targetApi="31">        <!-- Authentication Activity (Launcher) -->
        <activity
            android:name=".AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.AdminWafeOfFood.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AdminWafeOfFood" />
            <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
          <activity
            android:name=".menu.activities.AddEditMenuActivity"
            android:exported="false"
            android:label="Menu Management"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AdminWafeOfFood"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Order Detail Activity -->
        <activity
            android:name=".order.activities.OrderDetailActivity"
            android:exported="false"
            android:label="Order Detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AdminWafeOfFood" />

    </application>

</manifest>