<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <!-- Received Message (Left side) -->
    <LinearLayout
        android:id="@+id/llReceivedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_profile_circle"
            android:src="@drawable/ic_person_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="60dp">

            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane Smith"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvReceivedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_received"
                android:text="Hey! How's the project going?"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:maxWidth="280dp" />

            <TextView
                android:id="@+id/tvReceivedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:30 PM"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Sent Message (Right side) -->
    <LinearLayout
        android:id="@+id/llSentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@drawable/bg_message_sent"
            android:text="It's going great! Just finished the UI design."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:maxWidth="280dp" />

        <TextView
            android:id="@+id/tvSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:32 PM"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

</LinearLayout>
