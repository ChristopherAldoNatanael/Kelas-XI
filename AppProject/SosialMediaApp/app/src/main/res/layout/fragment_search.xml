<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Search Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/background_primary">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_input"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:hint="Search Twitter"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/twitter_blue"
        android:visibility="gone" />

    <!-- Trending Section (visible when no search) -->
    <LinearLayout
        android:id="@+id/llTrending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's happening"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingVertical="16dp" />

        <!-- Trending Topics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTrending1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Android"
                android:textColor="@color/twitter_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvTrending2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Kotlin"
                android:textColor="@color/twitter_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvTrending3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Development"
                android:textColor="@color/twitter_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvTrending4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Technology"
                android:textColor="@color/twitter_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvTrending5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#Programming"
                android:textColor="@color/twitter_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Search Results RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
