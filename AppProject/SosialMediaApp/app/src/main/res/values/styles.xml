<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextStyle" />
    
    <style name="TextStyle.DisplayName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextStyle.Username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextStyle.PostContent">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextStyle.TimeStamp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextStyle.ActionCount">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Button Styles -->
    <style name="ButtonStyle" />
    
    <style name="ButtonStyle.Action">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    
    <style name="ButtonStyle.Primary">
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:minHeight">44dp</item>
    </style>
    
    <style name="ButtonStyle.Follow">
        <item name="android:background">@drawable/btn_follow_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardStyle" />
    
    <style name="CardStyle.Post">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@color/background_primary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    
    <!-- Profile Image Styles -->
    <style name="ImageStyle" />
    
    <style name="ImageStyle.ProfileSmall">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/profile_placeholder_background</item>
    </style>
    
    <style name="ImageStyle.ProfileLarge">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/profile_placeholder_background</item>
    </style>
</resources>
