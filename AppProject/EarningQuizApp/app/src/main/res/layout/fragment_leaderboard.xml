<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_leaderboard.xml -->
<!-- Layout for the Leaderboard screen. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.LeaderboardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_leaderboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:gravity="center"/>

    <!-- RecyclerView to display the list of ranked users. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_leaderboard_user" />

</LinearLayout>
