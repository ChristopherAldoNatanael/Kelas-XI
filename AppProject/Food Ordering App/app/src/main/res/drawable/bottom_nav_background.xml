<?xml version="1.0" encoding="utf-8"?>
<!-- Modern bottom navigation background with gradient and rounded top corners -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/>
            <corners 
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"/>
        </shape>
    </item>
    
    <!-- Main background with gradient -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FAFAFA"
                android:angle="90"
                android:type="linear"/>
            <corners 
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"/>
            <stroke 
                android:width="1dp" 
                android:color="#E0E0E0"/>
        </shape>
    </item>
    
    <!-- Accent line at top -->
    <item 
        android:top="1dp"
        android:bottom="69dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6B35"
                android:centerColor="#FF8A65"
                android:endColor="#FF6B35"
                android:angle="0"
                android:type="linear"/>
            <corners 
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"/>
        </shape>
    </item>
    
</layer-list>
