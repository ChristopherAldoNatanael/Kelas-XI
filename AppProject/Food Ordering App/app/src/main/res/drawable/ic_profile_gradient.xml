<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">
    
    <!-- Background gradient circle -->
    <path android:pathData="M12,2C6.48,2 2,6.48 2,12s4.48,10 10,10s10,-4.48 10,-10S17.52,2 12,2z">
        <aapt:attr name="android:fillColor">
            <gradient 
                android:startColor="?attr/colorPrimary"
                android:endColor="?attr/colorSecondary"
                android:angle="180" />
        </aapt:attr>
    </path>
    
    <!-- Modern user profile -->
    <group android:translateX="12" android:translateY="12">
        <!-- User head with gradient -->
        <circle android:cx="0" android:cy="-3" android:r="3">
            <aapt:attr name="android:fillColor">
                <gradient 
                    android:startColor="#FFFFFF"
                    android:endColor="#F0F0F0"
                    android:angle="45" />
            </aapt:attr>
        </circle>
        
        <!-- User body -->
        <path android:pathData="M0,2c-3.5,0 -6,1.5 -6,4v2c0,0.55 0.45,1 1,1h10c0.55,0 1,-0.45 1,-1v-2c0,-2.5 -2.5,-4 -6,-4z">
            <aapt:attr name="android:fillColor">
                <gradient 
                    android:startColor="#FFFFFF"
                    android:endColor="#F0F0F0"
                    android:angle="90" />
            </aapt:attr>
        </path>
        
        <!-- Profile decorations -->
        <circle android:fillColor="?attr/colorSecondary" android:cx="-1" android:cy="-3.5" android:r="0.3"/>
        <circle android:fillColor="?attr/colorSecondary" android:cx="1" android:cy="-3.5" android:r="0.3"/>
        
        <!-- Smile -->
        <path
            android:fillColor="@android:color/transparent"
            android:strokeColor="?attr/colorSecondary"
            android:strokeWidth="0.4"
            android:pathData="M-1.5,-1.5 Q0,-0.5 1.5,-1.5"/>
        
        <!-- Status indicator -->
        <circle android:fillColor="#4CAF50" android:cx="4" android:cy="-6" android:r="1"/>
        <circle android:fillColor="#FFFFFF" android:cx="4" android:cy="-6" android:r="0.4"/>
    </group>
</vector>
