<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced active indicator for bottom navigation -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background pill shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20FF6B35"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Inner glow effect -->
    <item 
        android:left="2dp" 
        android:top="2dp" 
        android:right="2dp" 
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FF6B35"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    
    <!-- Core indicator -->
    <item 
        android:left="4dp" 
        android:top="4dp" 
        android:right="4dp" 
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#60FF6B35"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
</layer-list>
