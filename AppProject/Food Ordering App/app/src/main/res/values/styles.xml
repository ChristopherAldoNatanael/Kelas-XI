<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Rounded Corner Image View Style -->
    <style name="RoundedCornerImageView">
        <item name="cornerRadius">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <!-- Rounded Image View Style -->
    <style name="RoundedImageView">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Custom Button Styles -->    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
      <style name="ButtonSecondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/primary_ripple</item>
    </style>
    
    <!-- Enhanced Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Styles -->    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
      <style name="TextSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
      <style name="TextCaption" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="AppTextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTextSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Card Styles -->
    <style name="CardPrimary" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- Card View with elevation and corner radius -->
    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Input Field Styles -->    <style name="InputFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Chip Styles -->    <style name="ChipFilterStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Modern Bottom Navigation Style -->
    <style name="ModernBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/background_white</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">26dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="android:layout_height">70dp</item>
    </style>    <!-- Bottom Navigation Color States -->
    <style name="BottomNavIcon">
        <item name="android:tint">@color/bottom_nav_color_selector</item>
        <item name="android:scaleType">centerInside</item>
    </style>
      <!-- Modern Active Indicator for Bottom Navigation -->
    <style name="ModernActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#33FF6B35</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">12dp</item>
        <item name="shapeAppearance">@style/ModernIndicatorShape</item>
    </style>

    <!-- Shape for Active Indicator -->
    <style name="ModernIndicatorShape" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">16dp</item>
    </style>
    
</resources>
