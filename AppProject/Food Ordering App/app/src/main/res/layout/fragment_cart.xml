<?xml version="1.0" encoding="utf-8"?>
<!-- Layout untuk Cart Screen -->
<!-- Menampilkan items dalam cart, quantity controls, total calculation, dan checkout -->
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fillViewport="true"
    tools:context=".ui.cart.CartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/tvCartTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="My Cart"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cart Items Container -->
        <LinearLayout
            android:id="@+id/cartItemsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvCartTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cart Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_food_card"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Food Image Placeholder -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/background_light_gray"
                    android:layout_marginEnd="12dp" />

                <!-- Food Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Herbal Pancake"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$7.00"
                        android:textSize="14sp"
                        android:textColor="@color/primary_green"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnDecrease1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tvQuantity1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btnIncrease1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btnRemove1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ—‘"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Cart Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_food_card"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Food Image Placeholder -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/background_light_gray"
                    android:layout_marginEnd="12dp" />

                <!-- Food Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fruit Salad"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$5.00"
                        android:textSize="14sp"
                        android:textColor="@color/primary_green"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnDecrease2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tvQuantity2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btnIncrease2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btnRemove2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ—‘"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Cart Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_food_card"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Food Image Placeholder -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/background_light_gray"
                    android:layout_marginEnd="12dp" />

                <!-- Food Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Noodle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textSize="14sp"
                        android:textColor="@color/primary_green"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnDecrease3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/tvQuantity3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btnIncrease3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_primary"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btnRemove3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ—‘"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Promo Code Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/cartItemsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etPromoCode"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="Enter promo code"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fontFamily="sans-serif"
                android:inputType="textCapCharacters"
                android:maxLines="1" />

            <TextView
                android:id="@+id/btnApplyPromo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Apply"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_primary"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Total Section -->
        <LinearLayout
            android:id="@+id/totalSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_food_card"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/cartItemsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$29.00"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Delivery Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery Fee"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2.50"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Discount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-$0.00"
                    android:textSize="14sp"
                    android:textColor="@color/primary_green"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_light_gray"
                android:layout_marginBottom="12dp" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$31.50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/totalSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/btnClearCart"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Clear Cart"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnContinueShopping"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Continue Shopping"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Checkout Button -->
        <TextView
            android:id="@+id/btnCheckout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Checkout - $31.50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/totalSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Empty Cart Container -->
        <LinearLayout
            android:id="@+id/emptyCartContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCartTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›’"
                android:textSize="64sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your cart is empty"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add some delicious food to get started!"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>