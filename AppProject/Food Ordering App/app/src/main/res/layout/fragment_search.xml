<?xml version="1.0" encoding="utf-8"?>
<!-- Layout untuk Search Screen -->
<!-- Menampilkan search bar, popular searches, dan search results -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:padding="16dp"
    tools:context=".ui.search.SearchFragment">

    <!-- Search Container -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_search_bar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="12dp"
            android:contentDescription="Search icon" />

        <!-- Search Input -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search for delicious food..."
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <!-- Clear Search Icon -->
        <ImageView
            android:id="@+id/ivClearSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_marginStart="8dp"
            android:contentDescription="Clear search"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp" />

        <!-- Search Progress Bar -->
        <ProgressBar
            android:id="@+id/searchProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:indeterminateTint="@color/primary_green" />

    </LinearLayout>

    <!-- Popular Searches Container -->
    <LinearLayout
        android:id="@+id/popularSearchesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Popular Searches Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular Searches"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Popular Search Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/btnPopularSearch1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Pizza"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btnPopularSearch2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Burger"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btnPopularSearch3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Sushi"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

        <!-- Popular Search Buttons Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnPopularSearch4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Coffee"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Pasta"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Salad"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_input_field"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

    <!-- Search Results Text -->
    <TextView
        android:id="@+id/tvSearchResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Search results will appear here"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/popularSearchesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State / Recent Searches -->
    <LinearLayout
        android:id="@+id/recentSearchesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/popularSearchesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Recent Searches Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Searches"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Recent search items would be added here dynamically -->

    </LinearLayout>

    <!-- Search Tips -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Search Tips"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Try searching by food name\nâ€¢ Use categories like &quot;Asian&quot;, &quot;Italian&quot;\nâ€¢ Search by ingredients\nâ€¢ Look for specific restaurants"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>