<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.orders.OrderTrackingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Order Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOrderInfo"
            style="@style/AppCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/primary_color" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Order #A1B2C3D4" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="false"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/status_preparing"
                        tools:text="Preparing" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Date"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvOrderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Oct 25, 2024 • 14:30" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvOrderTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="Rp 95,000" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Order Progress Tracking -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOrderProgress"
            style="@style/AppCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Progress"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/divider_gray" />

                <!-- Order Status Steps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Step 1: Order Confirmed -->
                    <LinearLayout
                        android:id="@+id/stepOrderConfirmed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="24dp">

                        <View
                            android:id="@+id/indicatorConfirmed"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/colorPrimary"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Confirmed"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvConfirmedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"
                                tools:text="Oct 25, 2024 • 14:30" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/success_green" />

                    </LinearLayout>

                    <!-- Vertical Line -->
                    <View
                        android:id="@+id/lineToPreparation"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/success_green" />

                    <!-- Step 2: Preparation -->
                    <LinearLayout
                        android:id="@+id/stepPreparation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="24dp">

                        <View
                            android:id="@+id/indicatorPreparation"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/colorPrimary"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Preparing Your Order"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPreparationTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"
                                tools:text="Estimated: 15-20 minutes" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressPreparation"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:indeterminateTint="@color/orange"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <ImageView
                            android:id="@+id/iconPreparationDone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            app:tint="@color/orange"
                            android:visibility="visible"
                            tools:visibility="gone" />

                    </LinearLayout>

                    <!-- Vertical Line -->
                    <View
                        android:id="@+id/lineToReady"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/divider_gray" />

                    <!-- Step 3: Ready for Pickup/Delivery -->
                    <LinearLayout
                        android:id="@+id/stepReady"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="24dp">

                        <View
                            android:id="@+id/indicatorReady"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReadyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ready for Pickup"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:text="Ready for Pickup" />

                            <TextView
                                android:id="@+id/tvReadyTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"
                                android:visibility="gone"
                                tools:text="Oct 25, 2024 • 15:00"
                                tools:visibility="visible" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iconReady"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="@color/secondary_text" />

                    </LinearLayout>

                    <!-- Vertical Line -->
                    <View
                        android:id="@+id/lineToCompleted"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/divider_gray" />

                    <!-- Step 4: Completed -->
                    <LinearLayout
                        android:id="@+id/stepCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/indicatorCompleted"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Completed"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCompletedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"
                                android:visibility="gone"
                                tools:text="Oct 25, 2024 • 15:30"
                                tools:visibility="visible" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iconCompleted"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/secondary_text" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Estimated Time Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEstimatedTime"
            style="@style/AppCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/primary_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Ready Time"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvEstimatedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="15:00 - 15:15" />

                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTimeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/orange"
                    tools:text="5 min left" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelOrder"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel Order"
                android:textColor="@color/error_red"
                style="@style/AppButton.Outlined"
                app:strokeColor="@color/error_red"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCallRestaurant"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Call Restaurant"
                style="@style/AppButton.Outlined"
                app:icon="@android:drawable/ic_menu_call" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="View Details"
                style="@style/AppButton" />

        </LinearLayout>

        <!-- Help Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHelp"
            style="@style/AppCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Help?"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="If you have any questions about your order, feel free to contact our customer support."
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Contact Support"
                    style="@style/AppButton.Outlined"
                    app:icon="@android:drawable/ic_menu_help" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
