<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Order ID and Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #AB12CD34"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Order #AB12CD34" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 25, 2023 • 14:30"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp"
                    tools:text="Dec 25, 2023 • 14:30" />

            </LinearLayout>

            <!-- Status and Progress -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preparing"
                    android:textColor="@color/status_preparing"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Preparing" />

                <ProgressBar
                    android:id="@+id/progressStatus"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:progress="50"
                    android:progressTint="@color/status_preparing"
                    tools:progress="50" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="12dp" />

        <!-- Food Item Preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Food Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFirstItemImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@color/image_placeholder"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
                tools:src="@android:drawable/ic_menu_gallery" />

            <!-- Food Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFirstItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nasi Goreng Spesial"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nasi Goreng Spesial" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvItemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 items"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="3 items" />

                    <TextView
                        android:id="@+id/tvAdditionalItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2 more"
                        android:textColor="@color/primary_color"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:text="+2 more"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!-- Order Total -->
            <TextView
                android:id="@+id/tvOrderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 45.000"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="Rp 45.000" />

        </LinearLayout>

        <!-- Order Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvRecipientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="6dp"
                        tools:text="John Doe" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_directions"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvOrderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Away"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="6dp"
                        tools:text="Take Away" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginHorizontal="8dp" />

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        tools:text="Cash" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Cancel"
                android:textColor="@color/error_color"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                app:rippleColor="@color/error_ripple" />

            <!-- Track Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrackOrder"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Track Order"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"
                app:rippleColor="@color/primary_ripple" />

            <!-- Reorder Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReorder"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Reorder"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"
                app:rippleColor="@color/primary_ripple"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
