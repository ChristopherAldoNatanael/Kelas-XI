<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Offer"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvBannerDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% OFF"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/tvBannerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On your first order"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:alpha="0.9"
            android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBannerAction"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:text="Claim Now"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:minWidth="120dp"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="21dp"
            app:elevation="4dp"
            style="@style/Widget.Material3.Button.UnelevatedButton" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivBannerIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp" />

</LinearLayout>
